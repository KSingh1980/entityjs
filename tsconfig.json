{
    "compileOnSave": true,
    "compilerOptions": {
        "listFiles": true,
        "module": "commonjs",
        "target": "es6",
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "deps",
        "tools"
    ]
}